{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "IssueSuite: Agent Apply (dry-run)",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/issuesuite",
      "args": [
        "agent-apply",
        "--config",
        "${workspaceFolder}/issue_suite.config.yaml",
        "--updates-json",
        "${workspaceFolder}/agent_updates.json",
        "--dry-run-sync",
        "--summary-json",
        "${workspaceFolder}/issues_summary.json"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "IssueSuite: Agent Apply (apply)",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/issuesuite",
      "args": [
        "agent-apply",
        "--config",
        "${workspaceFolder}/issue_suite.config.yaml",
        "--updates-json",
        "${workspaceFolder}/agent_updates.json",
        "--apply",
        "--no-dry-run-sync",
        "--summary-json",
        "${workspaceFolder}/issues_summary.json"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "IssueSuite: Validate",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/issuesuite",
      "args": [
        "validate",
        "--config",
        "${workspaceFolder}/issue_suite.config.yaml"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "IssueSuite: Dry-run Sync",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/issuesuite",
      "args": [
        "sync",
        "--dry-run",
        "--update",
        "--config",
        "${workspaceFolder}/issue_suite.config.yaml",
        "--summary-json",
        "${workspaceFolder}/issues_summary.json"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "IssueSuite: Full Sync",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/issuesuite",
      "args": [
        "sync",
        "--update",
        "--config",
        "${workspaceFolder}/issue_suite.config.yaml",
        "--summary-json",
        "${workspaceFolder}/issues_summary.json"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "IssueSuite: Export",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/issuesuite",
      "args": [
        "export",
        "--pretty",
        "--config",
        "${workspaceFolder}/issue_suite.config.yaml",
        "--output",
        "${workspaceFolder}/issues_export.json"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "IssueSuite: Summary",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/issuesuite",
      "args": [
        "summary",
        "--config",
        "${workspaceFolder}/issue_suite.config.yaml"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "IssueSuite: Generate Schemas",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/issuesuite",
      "args": [
        "schema",
        "--config",
        "${workspaceFolder}/issue_suite.config.yaml"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "IssueSuite: Reconcile",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/issuesuite",
      "args": [
        "reconcile",
        "--config",
        "${workspaceFolder}/issue_suite.config.yaml"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "IssueSuite: AI Context",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/issuesuite",
      "args": [
        "ai-context",
        "--quiet",
        "--config",
        "${workspaceFolder}/issue_suite.config.yaml"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}
